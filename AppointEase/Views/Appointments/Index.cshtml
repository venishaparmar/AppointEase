@model IEnumerable<AppointEase.Model.Appointment>

<table class="table">
    <thead>
        <tr>
            <th>Client Name</th>
            <th>Client Email</th>
            <th>Appointment Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.ClientName</td>
                <td>@appointment.ClientEmail</td>
                <td>@appointment.AppointmentDate</td>
                <td>@appointment.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@appointment.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New Appointment</a>
